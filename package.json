{
  "name": "git-cli",
  "version": "1.0.0",
  "description": "A CLI app that gives you the weather forecast",
  "license": "MIT",
  "homepage": "https://github.com/Bielik20/outside-cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bielik20/outside-cli.git"
  },
  "engines": {
    "node": ">=8"
  },
  "keywords": [
    "weather",
    "forecast",
    "rain"
  ],
  "preferGlobal": true,
  "bin": {
    "gh": "bin/gh"
  },
  "author": "",
  "scripts": {
    "build": "tsc",
    "lint": "tslint --project ."
  },
  "dependencies": {
    "@octokit/rest": "^16.21.0",
    "chalk": "^2.4.2",
    "clear": "^0.1.0",
    "clui": "^0.3.6",
    "configstore": "^4.0.0",
    "figlet": "^1.2.1",
    "inquirer": "^6.2.2",
    "lodash": "^4.17.11",
    "minimist": "^1.2.0",
    "simple-git": "^1.110.0",
    "touch": "^3.1.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.2.0",
    "@types/node": "^11.12.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.4000"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "prettier --write",
        "tslint --fix",
        "git add"
      ],
      "*.{json,css,scss,md}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/**/*"
    ]
  }
}
